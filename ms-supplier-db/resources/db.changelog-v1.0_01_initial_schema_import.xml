<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create-product-table-27-04-2020" author="AiratSalakhov">
        <createTable tableName="product" schemaName="supplier">
            <column name="id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="int8">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="timestamptz" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="update_date" type="timestamptz" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-product-key-27-04-2020" author="AiratSalakhov">
        <addPrimaryKey columnNames="id"
                       tableName="product"
                       validate="true"
                       schemaName="supplier"/>
    </changeSet>

    <changeSet id="create-order-table-27-04-2020" author="AiratSalakhov">
        <createTable tableName="order" schemaName="supplier">
            <column name="id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="customer" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="cost" type="int8">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="timestamptz" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="update_date" type="timestamptz" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-order-key-27-04-2020" author="AiratSalakhov">
        <addPrimaryKey columnNames="id"
                       tableName="order"
                       validate="true"
                       schemaName="supplier"/>
    </changeSet>

    <changeSet id="create-payment-table-27-04-2020" author="AiratSalakhov">
        <createTable tableName="payment" schemaName="supplier">
            <column name="id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="orgn" type="varchar(13)">
                <constraints nullable="false"/>
            </column>
            <column name="kpp" type="varchar(9)">
                <constraints nullable="false"/>
            </column>
            <column name="inn" type="varchar(12)">
                <constraints nullable="false"/>
            </column>
            <column name="r_s" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="cost" type="int8">
                <constraints nullable="false"/>
            </column>
            <column name="payment_external_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="payment_callback_url" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="output_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="store_calling_url" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="timestamptz" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="update_date" type="timestamptz" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-payment-key-27-04-2020" author="AiratSalakhov">
        <addPrimaryKey columnNames="id"
                       tableName="payment"
                       validate="true"
                       schemaName="supplier"/>
        <addForeignKeyConstraint baseColumnNames="order_id"
                                 baseTableName="payment"
                                 constraintName="fk_payment_order"
                                 referencedColumnNames="id"
                                 referencedTableName="order"
                                 validate="true"/>
    </changeSet>

    <changeSet id="create-item-table-27-04-2020" author="AiratSalakhov">
        <createTable tableName="item" schemaName="supplier">
            <column name="id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="timestamptz" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="update_date" type="timestamptz" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-item-key-27-04-2020" author="AiratSalakhov">
        <addPrimaryKey columnNames="id"
                       tableName="item"
                       validate="true"
                       schemaName="supplier"/>
        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="item"
                                 constraintName="fk_item_product"
                                 referencedColumnNames="id"
                                 referencedTableName="product"
                                 validate="true"/>
        <addForeignKeyConstraint baseColumnNames="order_id"
                                 baseTableName="item"
                                 constraintName="fk_item_order"
                                 referencedColumnNames="id"
                                 referencedTableName="order"
                                 validate="true"/>
    </changeSet>
</databaseChangeLog>
